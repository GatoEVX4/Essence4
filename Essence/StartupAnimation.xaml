<Window x:Name="MainWin" x:Class="Essence.StartupAnimation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Essence"
        mc:Ignorable="d"
        Title="StartupAnimation" Height="550" Width="850"
        WindowStartupLocation="CenterScreen" Background="{x:Null}"
        Foreground="#FF939292"
        AllowsTransparency="True"
        WindowStyle="None"
        Topmost="True"
        ShowInTaskbar="False"
        Icon="/essence.ico"
        Loaded="MainWin_Loaded" Closing="MainWin_Closing">

    <Window.Triggers>

        <EventTrigger RoutedEvent="FrameworkElement.Unloaded">
            <BeginStoryboard>
                <Storyboard x:Name="FormFadeOut" Completed="CloseWindow">
                    <DoubleAnimation x:Name="FormFadeOutAnimation" Storyboard.TargetName="MainWin" Storyboard.TargetProperty="(UIElement.Opacity)" From="1.0" To="0.0" Duration="0:0:0.5" AutoReverse="False" RepeatBehavior="1x" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

    </Window.Triggers>

    <Border x:Name="WindowBorder3" Margin="150">
        <Grid x:Name="IniciarGrid2">
            <Grid.Effect>
                <BlurEffect x:Name="IniciarBlur" Radius="0"/>
            </Grid.Effect>

            <Grid x:Name="shitty2" ClipToBounds="True">
                <Border x:Name="eee" CornerRadius="20" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Black">
                    <StackPanel x:Name="e7777" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/essence.png" Stretch="UniformToFill" Width="50" Height="50" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Studios" Foreground="#FFF0F0F0" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="/EssenceTestsWPF;component/Fonts/#Poppins" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border x:Name="kkkk" Background="Black" CornerRadius="10" ClipToBounds="True">
                    <Grid>
                        <Grid x:Name="dfsdfsdfdssdf" VerticalAlignment="Center" Height="2" HorizontalAlignment="Center" Margin="0,30,0,0">
                            <Border x:Name="w13" CornerRadius="2" Background="#FF1E1E1E" Height="12" VerticalAlignment="Top">
                                <Border.Effect>
                                    <BlurEffect/>
                                </Border.Effect>
                            </Border>


                            <Border x:Name="SpinningBorder2" CornerRadius="2" HorizontalAlignment="Left" >
                                <Border.Width>
                                    <Binding Path="Width" ElementName="SpinningBorder"/>
                                </Border.Width>
                                <Border.Effect>
                                    <BlurEffect x:Name="ggg" Radius="50" RenderingBias="Quality"/>
                                </Border.Effect>
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,1">
                                        <LinearGradientBrush.RelativeTransform>
                                            <TransformGroup>
                                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                                <RotateTransform x:Name="rgbRotation2" CenterY="0.5" CenterX="0.5"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </LinearGradientBrush.RelativeTransform>
                                        <GradientStop Color="#FF613954" Offset="0.003"/>
                                        <GradientStop Color="#FFB26661" Offset="1"/>
                                        <GradientStop Color="#FFB14C5F" Offset="0.523"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>


                            <Border x:Name="SpinningBorder" SizeChanged="ee_SizeChanged" CornerRadius="2" Width="300" HorizontalAlignment="Left" >
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,1">
                                        <LinearGradientBrush.RelativeTransform>
                                            <TransformGroup>
                                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                                <RotateTransform x:Name="rgbRotation" CenterY="0.5" CenterX="0.5"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </LinearGradientBrush.RelativeTransform>
                                        <GradientStop Color="#FF613954" Offset="0.003"/>
                                        <GradientStop Color="#FFB26661" Offset="1"/>
                                        <GradientStop Color="#FFB14C5F" Offset="0.523"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" ClipToBounds="True">

                            <TextBlock x:Name="egggg" Text="Essence Executor" Foreground="#FFF0F0F0" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="/EssenceTestsWPF;component/Fonts/#Poppins SemiBold" FontSize="16" Margin="35,0,0,0" Visibility="Collapsed"/>


                        </Grid>

                        <Image x:Name="EvxIco" RenderOptions.BitmapScalingMode="HighQuality" Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Source="/essence.png" Margin="0,90,0,0"/>


                        <StackPanel x:Name="eeee" MaxHeight="94" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top">
                            <TextBlock Text="Starting..." Foreground="#FF969696" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="/EssenceTestsWPF;component/Fonts/#Poppins Light" FontSize="10"/>
                        </StackPanel>
                        <Border CornerRadius="10" Height="48" VerticalAlignment="Bottom">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#00000000"/>
                                    <GradientStop Color="Black" Offset="0.511"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                </Border>



                <TextBlock x:Name="compilationtxt" Text="Version: 3.7 | Compilation: 2000 ~ 24/12/2024" FontFamily="Leelawadee UI" Foreground="#FF646464" HorizontalAlignment="Center" FontSize="9" Margin="0,530,0,0" Height="12" VerticalAlignment="Top"/>

                <TextBlock Text="Stucked here? " Foreground="#FF969696" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="/EssenceTestsWPF;component/Fonts/#Poppins Light" FontSize="10" Margin="0,535,3,0" Visibility="Collapsed"/>
            </Grid>


            <Grid x:Name="WhatIsThis" Background="Black" Visibility="Collapsed">
                <Image x:Name="banimage" Source="/ImageResources/maxresdefault.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" Width="680" Height="800" OpacityMask="Black" Margin="0,-10,0,0">
                    <Image.Effect>
                        <BlurEffect x:Name="banblur" Radius="0"/>
                    </Image.Effect>
                </Image>

                <Border x:Name="killbeffect" Opacity="0">
                    <Border.Effect>
                        <BlurEffect Radius="20"/>
                    </Border.Effect>
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="Transparent" Offset="0.913"/>
                            <GradientStop Color="Red" Offset="1.1"/>
                        </RadialGradientBrush>
                    </Border.Background>
                </Border>


                <Border x:Name="killbeffect2" Opacity="0">
                    <Border.Effect>
                        <BlurEffect Radius="20"/>
                    </Border.Effect>
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#59FF0000" Offset="0.913"/>
                            <GradientStop Color="#26FF0000" Offset="1.1"/>
                        </RadialGradientBrush>
                    </Border.Background>
                </Border>


                <Button x:Name="lolexitbtn" BorderThickness="0" PreviewMouseLeftButtonDown="ExitMD" Content="Close" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="100" Height="28" Foreground="#FFE6E6E6" Background="#FF1E1E1E"/>

                <!--<Grid Width="700" Height="377" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="Warnin_ServOff_11_Copiar" Margin="0,-90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="90" FontWeight="Bold" Foreground="#FFFFE135" Width="636" TextAlignment="Center" FontFamily="Impact" Text="banned">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="White" Direction="0" ShadowDepth="0" BlurRadius="3"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Border BorderBrush="#FFF3F3F3" Margin="30,93,30,0" BorderThickness="0,1,0,1" Height="74" VerticalAlignment="Center">
                        <TextBlock TextWrapping="Wrap" Text="You have been banned from Essence. Thats all we know. Contact support on our discord server for help" FontSize="20" TextAlignment="Center" FontFamily="Arial" VerticalAlignment="Center" Foreground="#FFC8C8C8"/>
                    </Border>
                </Grid>-->
            </Grid>
        </Grid>
    </Border>
</Window>
