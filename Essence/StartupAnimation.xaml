<Window
    x:Class="Essence.StartupAnimation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Essence"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MainWin"
    Title="StartupAnimation"
    Width="850"
    Height="550"
    AllowsTransparency="True"
    Background="{x:Null}"
    Closing="MainWin_Closing"
    Foreground="#FF939292"
    Icon="/essence.ico"
    Loaded="MainWin_Loaded"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Triggers>

        <EventTrigger RoutedEvent="FrameworkElement.Unloaded">
            <BeginStoryboard>
                <Storyboard x:Name="FormFadeOut" Completed="CloseWindow">
                    <DoubleAnimation
                        x:Name="FormFadeOutAnimation"
                        AutoReverse="False"
                        RepeatBehavior="1x"
                        Storyboard.TargetName="MainWin"
                        Storyboard.TargetProperty="(UIElement.Opacity)"
                        From="1.0"
                        To="0.0"
                        Duration="0:0:0.5" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

    </Window.Triggers>

    <Border x:Name="WindowBorder3" Margin="150">
        <Grid x:Name="IniciarGrid2">
            <Grid.Effect>
                <BlurEffect x:Name="IniciarBlur" Radius="0" />
            </Grid.Effect>

            <Grid x:Name="shitty2" ClipToBounds="True">
                <Border
                    x:Name="eee"
                    Width="100"
                    Height="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Black"
                    CornerRadius="20">
                    <StackPanel
                        x:Name="e7777"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Image
                            Width="50"
                            Height="50"
                            Margin="0,0,10,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            RenderOptions.EdgeMode="Aliased"
                            Source="/essence.png"
                            Stretch="UniformToFill" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="/EssenceTestsWPF;component/Fonts/#Poppins"
                            Foreground="#FFF0F0F0"
                            Text="Studios" />
                    </StackPanel>
                </Border>

                <Border
                    x:Name="kkkk"
                    Background="Black"
                    ClipToBounds="True"
                    CornerRadius="10">
                    <Grid>
                        <Grid
                            x:Name="dfsdfsdfdssdf"
                            Height="2"
                            Margin="0,30,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <Border
                                x:Name="w13"
                                Height="12"
                                VerticalAlignment="Top"
                                Background="#FF1E1E1E"
                                CornerRadius="2">
                                <Border.Effect>
                                    <BlurEffect />
                                </Border.Effect>
                            </Border>


                            <Border
                                x:Name="SpinningBorder2"
                                HorizontalAlignment="Left"
                                CornerRadius="2">
                                <Border.Width>
                                    <Binding ElementName="SpinningBorder" Path="Width" />
                                </Border.Width>
                                <Border.Effect>
                                    <BlurEffect
                                        x:Name="ggg"
                                        Radius="50"
                                        RenderingBias="Quality" />
                                </Border.Effect>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                                        <LinearGradientBrush.RelativeTransform>
                                            <TransformGroup>
                                                <ScaleTransform CenterX="0.5" CenterY="0.5" />
                                                <SkewTransform CenterX="0.5" CenterY="0.5" />
                                                <RotateTransform x:Name="rgbRotation2" CenterX="0.5" CenterY="0.5" />
                                                <TranslateTransform />
                                            </TransformGroup>
                                        </LinearGradientBrush.RelativeTransform>
                                        <GradientStop Offset="0.003" Color="#FF613954" />
                                        <GradientStop Offset="1" Color="#FFB26661" />
                                        <GradientStop Offset="0.523" Color="#FFB14C5F" />
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>


                            <Border
                                x:Name="SpinningBorder"
                                Width="300"
                                HorizontalAlignment="Left"
                                CornerRadius="2"
                                SizeChanged="ee_SizeChanged">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                                        <LinearGradientBrush.RelativeTransform>
                                            <TransformGroup>
                                                <ScaleTransform CenterX="0.5" CenterY="0.5" />
                                                <SkewTransform CenterX="0.5" CenterY="0.5" />
                                                <RotateTransform x:Name="rgbRotation" CenterX="0.5" CenterY="0.5" />
                                                <TranslateTransform />
                                            </TransformGroup>
                                        </LinearGradientBrush.RelativeTransform>
                                        <GradientStop Offset="0.003" Color="#FF613954" />
                                        <GradientStop Offset="1" Color="#FFB26661" />
                                        <GradientStop Offset="0.523" Color="#FFB14C5F" />
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>
                        <Grid
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            ClipToBounds="True">

                            <TextBlock
                                x:Name="egggg"
                                Margin="35,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="/EssenceTestsWPF;component/Fonts/#Poppins SemiBold"
                                FontSize="16"
                                Foreground="#FFF0F0F0"
                                Text="Essence Executor"
                                Visibility="Collapsed" />


                        </Grid>

                        <Image
                            x:Name="EvxIco"
                            Width="40"
                            Height="40"
                            Margin="0,90,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/essence.png" />


                        <StackPanel
                            x:Name="eeee"
                            MaxHeight="94"
                            Margin="0,190,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="/EssenceTestsWPF;component/Fonts/#Poppins Light"
                                FontSize="10"
                                Foreground="#FF969696"
                                Text="Starting..." />
                        </StackPanel>
                        <Border
                            Height="48"
                            VerticalAlignment="Bottom"
                            CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#00000000" />
                                    <GradientStop Offset="0.511" Color="Black" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                </Border>



                <TextBlock
                    x:Name="compilationtxt"
                    Height="12"
                    Margin="0,530,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="Leelawadee UI"
                    FontSize="9"
                    Foreground="#FF646464"
                    Text="Version: 3.7 | Compilation: 2000 ~ 24/12/2024" />

                <TextBlock
                    Margin="0,535,3,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontFamily="/EssenceTestsWPF;component/Fonts/#Poppins Light"
                    FontSize="10"
                    Foreground="#FF969696"
                    Text="Stucked here? "
                    Visibility="Collapsed" />
            </Grid>


            <Grid
                x:Name="WhatIsThis"
                Background="Black"
                Visibility="Collapsed">
                <Image
                    x:Name="banimage"
                    Width="680"
                    Height="800"
                    Margin="0,-10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    OpacityMask="Black"
                    Source="/ImageResources/maxresdefault.jpg">
                    <Image.Effect>
                        <BlurEffect x:Name="banblur" Radius="0" />
                    </Image.Effect>
                </Image>

                <Border x:Name="killbeffect" Opacity="0">
                    <Border.Effect>
                        <BlurEffect Radius="20" />
                    </Border.Effect>
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Offset="0.913" Color="Transparent" />
                            <GradientStop Offset="1.1" Color="Red" />
                        </RadialGradientBrush>
                    </Border.Background>
                </Border>


                <Border x:Name="killbeffect2" Opacity="0">
                    <Border.Effect>
                        <BlurEffect Radius="20" />
                    </Border.Effect>
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Offset="0.913" Color="#59FF0000" />
                            <GradientStop Offset="1.1" Color="#26FF0000" />
                        </RadialGradientBrush>
                    </Border.Background>
                </Border>


                <Button
                    x:Name="lolexitbtn"
                    Width="100"
                    Height="28"
                    Margin="0,0,10,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="#FF1E1E1E"
                    BorderThickness="0"
                    Content="Close"
                    Foreground="#FFE6E6E6"
                    PreviewMouseLeftButtonDown="ExitMD" />

                <!--<Grid Width="700" Height="377" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="Warnin_ServOff_11_Copiar" Margin="0,-90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="90" FontWeight="Bold" Foreground="#FFFFE135" Width="636" TextAlignment="Center" FontFamily="Impact" Text="banned">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="White" Direction="0" ShadowDepth="0" BlurRadius="3"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Border BorderBrush="#FFF3F3F3" Margin="30,93,30,0" BorderThickness="0,1,0,1" Height="74" VerticalAlignment="Center">
                        <TextBlock TextWrapping="Wrap" Text="You have been banned from Essence. Thats all we know. Contact support on our discord server for help" FontSize="20" TextAlignment="Center" FontFamily="Arial" VerticalAlignment="Center" Foreground="#FFC8C8C8"/>
                    </Border>
                </Grid>-->
            </Grid>
        </Grid>
    </Border>
</Window>
