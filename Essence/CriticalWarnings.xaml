<Window x:Class="Essence.CriticalWarnings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Essence"
        mc:Ignorable="d"
        Title="CriticalWarnings" Width="400" Height="250"
        WindowStartupLocation="CenterScreen" Background="{x:Null}"
        Foreground="#FF939292" AllowsTransparency="True"
        WindowStyle="None"
        Icon="/essence.ico"
        Closing="MainWin_Closing"
        Name="MainWin"
        Loaded="Window_Loaded">

    <Window.Triggers>

        <EventTrigger RoutedEvent="FrameworkElement.Unloaded">
            <BeginStoryboard>
                <Storyboard x:Name="FormFadeOut" Completed="CloseWindow">
                    <DoubleAnimation x:Name="FormFadeOutAnimation" Storyboard.TargetName="MainWin" Storyboard.TargetProperty="(UIElement.Opacity)" From="1.0" To="0.0" Duration="0:0:0.5" AutoReverse="False" RepeatBehavior="1x" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

    </Window.Triggers>

    <Border x:Name="Warnings" Background="#FF0F0F0F" >
        <Grid>
            <Border x:Name="Topbar" Height="40" BorderThickness="0" CornerRadius="5, 5, 0, 0" VerticalAlignment="Top" MouseLeftButtonDown="Rectangle_MouseDown" Background="#4C000000" >
                <Grid x:Name="TopBarGrid">
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Width="28" Height="28" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/essence.png" Margin="5,0,0,0"/>


                    <Image x:Name="CloseBtn" Height="18" VerticalAlignment="Center" Source="/ImageResources/MainExecution/CloseWindowIcon.png" OpacityMask="#FF454545" Opacity="0.9" Cursor="Hand" HorizontalAlignment="Right" Width="18" MouseLeftButtonDown="ExitMD" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.6" To="1" BeginTime="0:0:0" Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.6" BeginTime="0:0:0" Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <TextBlock x:Name="EVXTXT" TextWrapping="Wrap" Text="Essence" VerticalAlignment="Center" Foreground="Gainsboro" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="14" Margin="40,0,0,0" HorizontalAlignment="Left" Width="126" FontWeight="Bold" />
                </Grid>
            </Border>

            <Grid x:Name="Conexão_Alterada" Background="Black" Margin="0,40,0,0">
                <TextBlock/>
                <Image Source="/ImageResources/Exeptions/stop.png" Width="120" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock x:Name="UnautorizedAction" TextWrapping="Wrap" Text="Unauthorized action detected. Stop immediately to avoid further measures." VerticalAlignment="Top" Foreground="White" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="15" Margin="10,10,10,0" TextAlignment="Center"/>
                <TextBlock x:Name="FollowRules" TextWrapping="Wrap" Text="Follow the rules to continue using our services." VerticalAlignment="Bottom" Foreground="#FFC8C8C8" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="14" Margin="0,0,0,25" HorizontalAlignment="Center"/>
                <TextBlock x:Name="reason" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Foreground="#FFC8C8C8" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="10" Margin="0,190,0,0" HorizontalAlignment="Center"/>
            </Grid>
            <Grid x:Name="Servidor_Off" Background="Black" Margin="0,40,0,0" d:IsHidden="True">
                <TextBlock/>
                <Image Source="/ImageResources/Exeptions/badserver.png" Width="120" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock x:Name="UpdatingServers" TextWrapping="Wrap" Text="We’re working to resolve the problem as quickly as possible. Thank you for your patience!" VerticalAlignment="Top" Foreground="White" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="15" Margin="10,10,10,0" TextAlignment="Center"/>
                <TextBlock x:Name="ServersUpdating" TextWrapping="Wrap" Text="Our servers are updating!" VerticalAlignment="Bottom" Foreground="#FFC8C8C8" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="14" Margin="0,0,0,25" HorizontalAlignment="Center"/>
            </Grid>
            <Grid x:Name="Net_Off" Background="Black" Margin="0,40,0,0" d:IsHidden="True">
                <TextBlock/>
                <Image Source="/ImageResources/Welcome/shield.png" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock x:Name="CheckInternet" TextWrapping="Wrap" Text="Please check your network settings and firewall configuration to restore access." VerticalAlignment="Top" Foreground="White" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="15" Margin="10,10,10,0" TextAlignment="Center"/>
                <TextBlock x:Name="NoInternet" TextWrapping="Wrap" Text="No Internet Connection Detected" VerticalAlignment="Bottom" Foreground="#FFC8C8C8" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="14" Margin="0,0,0,25" HorizontalAlignment="Center"/>
            </Grid>
            <Grid x:Name="Serv_429" Background="Black" Margin="0,40,0,0" d:IsHidden="True">
                <TextBlock/>
                <Image Source="/ImageResources/Exeptions/clock.png" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock x:Name="CheckInternet1" TextWrapping="Wrap" Text="Ermm, you're making a lot of requests, let's calm down a bit" VerticalAlignment="Top" Foreground="White" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="15" Margin="10,10,10,0" TextAlignment="Center"/>
                <TextBlock x:Name="NoInternet1" TextWrapping="Wrap" Text="request limit reached" VerticalAlignment="Bottom" Foreground="#FFC8C8C8" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="14" Margin="0,0,0,25" HorizontalAlignment="Center"/>
            </Grid>
            <Image x:Name="loading_gif1" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased" HorizontalAlignment="Center" Height="20" VerticalAlignment="Bottom" Width="20" gif:ImageBehavior.AnimatedSource="ImageResources/Settings/Rolling-1s-100px.gif" Opacity="0.8" Source="/ImageResources/Settings/Rolling-1s-100px.gif" Margin="0,0,0,5" Visibility="Collapsed"/>

            <Grid x:Name="Installing_Requirements" Background="Black" Margin="0,40,0,0" d:IsHidden="True">
                <Border CornerRadius="20" Width="350" Height="265" Margin="0,90,10,0" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <Border.Background>
                        <ImageBrush ImageSource="/ImageResources/Exeptions/file-bwcYcxvM8nPMi7zLoBk6qbE9.jpg" Stretch="UniformToFill"/>
                    </Border.Background>

                </Border>

                <TextBlock x:Name="Warnin_ServOff_11" HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" Text="Missing Dependencies Detected" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" Foreground="#FFC8C8C8" Width="635" TextAlignment="Center"/>
                <TextBlock x:Name="Warnin_ServOff_12" HorizontalAlignment="Center" Margin="0,47,0,0" TextWrapping="Wrap" Text="We need to install the required dependencies to proceed." VerticalAlignment="Top" FontSize="16.5" FontWeight="Bold" Foreground="#FFC8C8C8" Width="680" TextAlignment="Center" Background="Black"/>

                <WrapPanel x:Name="Instalations_panel" Width="320" HorizontalAlignment="Left" Orientation="Vertical" VerticalAlignment="Bottom" Margin="10,0,0,40"/>

            </Grid>
        </Grid>
    </Border>

</Window>
