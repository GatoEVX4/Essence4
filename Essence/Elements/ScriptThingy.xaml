<UserControl
    x:Class="Essence.Elements.ScriptThingy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Essence"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="245"
    Height="150"
    Margin="0"
    Foreground="{x:Null}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation
                Name="FadeIn"
                AutoReverse="False"
                RepeatBehavior="1x"
                Storyboard.TargetName="CopiedMsg"
                Storyboard.TargetProperty="(Window.Opacity)"
                From="0.0"
                To="1.0"
                Duration="0:0:0.25" />
        </Storyboard>
        <Storyboard x:Key="FadeOut">
            <DoubleAnimation
                Name="FadeOut"
                AutoReverse="False"
                RepeatBehavior="1x"
                Storyboard.TargetName="CopiedMsg"
                Storyboard.TargetProperty="(Window.Opacity)"
                From="1.0"
                To="0.0"
                Duration="0:0:0.25" />
        </Storyboard>
    </UserControl.Resources>


    <Grid
        x:Name="edfefdefd"
        Margin="3"
        ClipToBounds="True"
        Cursor="Hand">
        <Grid.CacheMode>
            <BitmapCache RenderAtScale="1" />
        </Grid.CacheMode>
        <Border
            Background="#CC0A0A0A"
            BorderBrush="#FF646464"
            BorderThickness="0"
            CornerRadius="3" />
        <Border
            x:Name="BorderImg"
            Margin="0,0,0,35"
            CornerRadius="3,3,0,0">
            <Border.Background>
                <ImageBrush
                    ImageSource="/Graphics/Images/Backgrounds/thumb-1920-885756.png"
                    Opacity="0.8"
                    Stretch="UniformToFill" />
            </Border.Background>

            <Border
                x:Name="CopiedMsg"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Background="#C6000000"
                BorderThickness="0"
                CornerRadius="5"
                Visibility="Hidden">
                <TextBlock Foreground="#FFBCBCBC" TextAlignment="Center"><Run /><LineBreak /><Run /><LineBreak /><Run /><LineBreak /><Run FontSize="11" Text="Script Copiado." /></TextBlock>
            </Border>
        </Border>

        <Image
            x:Name="ButtonImg"
            Width="24"
            Height="24"
            Margin="0,4,4,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Opacity="0.75"
            RenderOptions.BitmapScalingMode="LowQuality"
            RenderTransformOrigin="0.5,0.5"
            Source="/Graphics/Images/MainExecution/star1.png"
            Stretch="Fill"
            Visibility="Hidden">
            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="UIElement.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        BeginTime="0:0:0"
                                        Storyboard.TargetProperty="Opacity"
                                        From="0.75"
                                        To="1"
                                        Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="UIElement.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        BeginTime="0:0:0"
                                        Storyboard.TargetProperty="Opacity"
                                        From="1"
                                        To="0.75"
                                        Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>


        <TextBlock
            x:Name="ScriptTitle"
            Width="230"
            Margin="0,112,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{x:Null}"
            FontFamily="Calibri"
            FontSize="14"
            FontWeight="Bold"
            Foreground="#FFD2D2D2"
            Text="Essence" />
        <TextBlock
            x:Name="Credit"
            Width="111"
            Margin="5,0,0,4"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="{x:Null}"
            FontSize="10"
            Foreground="#FF969696"
            Text="By M4A1" />



        <TextBlock
            x:Name="Views"
            Grid.ColumnSpan="4"
            Width="129"
            Height="15"
            Margin="5,89,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="10"
            Foreground="White"
            Text="Visualizações: 777"
            TextWrapping="Wrap"
            Visibility="Hidden" />
        <Button
            x:Name="ExecuteBtn"
            Width="30"
            Height="30"
            Margin="0,0,5,16"
            Padding="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            materialDesign:ButtonAssist.CornerRadius="4"
            Background="#FFC81414"
            BorderBrush="{x:Null}"
            Visibility="Collapsed">
            <Path
                Width="14"
                Height="16"
                Margin="1,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Data="M8,5.14V19.14L19,12.14L8,5.14Z"
                Fill="#FFFAFAFA"
                Stretch="Fill" />
        </Button>

        <Button
            x:Name="CopyBtn"
            Width="30"
            Height="30"
            Margin="0,0,40,16"
            Padding="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            materialDesign:ButtonAssist.CornerRadius="4"
            Background="#FFC81414"
            BorderBrush="{x:Null}"
            Visibility="Collapsed">
            <Path
                Width="14"
                Height="16"
                Margin="0,0,2,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Data="M4 23q-.825 0-1.412-.587T2 21V7h2v14h11v2zm4-4q-.825 0-1.412-.587T6 17V3q0-.825.588-1.412T8 1h7l6 6v10q0 .825-.587 1.413T19 19zm6-11h5l-5-5z"
                Fill="#FFFAFAFA"
                Stretch="Fill" />
        </Button>

        <Grid
            x:Name="akdaidjaidjaiodasd"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <Path
                Margin="211,15,0,100"
                Data="M1 21h22L12 2"
                Fill="#FFC81414"
                RenderTransformOrigin="0.5,0.5"
                Stretch="Uniform">
                <Path.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="-108.279" />
                        <TranslateTransform />
                    </TransformGroup>
                </Path.RenderTransform>
            </Path>

            <Border
                Width="25"
                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="#FFC81414">
                <Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="{x:Null}"
                        FontFamily="Nirmala UI"
                        FontSize="11"
                        FontWeight="Bold"
                        Foreground="#FFD2D2D2"
                        Text="TOP" />
                    <TextBlock
                        x:Name="dndiadiadn"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Background="{x:Null}"
                        FontFamily="Nirmala UI"
                        FontSize="11"
                        FontWeight="Bold"
                        Foreground="#FFD2D2D2"
                        Text="1" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
