<UserControl x:Class="Essence.Elements.User"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Essence.Elements"
             mc:Ignorable="d" Margin="10">
    <UserControl.Resources>
        <!-- Mouse Enter Animation -->
        <Storyboard x:Key="MouseEnterStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Width" To="130" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Height" To="153" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Mouse Leave Animation -->
        <Storyboard x:Key="MouseLeaveStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Width" To="110" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Height" To="130" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="MouseGrid" Cursor="Hand"  Width="110" Height="130">
        <Grid.Triggers>
            <!-- Mouse Enter Trigger -->
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard Storyboard="{StaticResource MouseEnterStoryboard}"/>
            </EventTrigger>

            <!-- Mouse Leave Trigger -->
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard Storyboard="{StaticResource MouseLeaveStoryboard}"/>
            </EventTrigger>
        </Grid.Triggers>

        <Ellipse Margin="0,0,0,20">
            <Ellipse.Effect>
                <BlurEffect Radius="20"/>
            </Ellipse.Effect>
            <Ellipse.Fill>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Image x:Name="AnimatedImage1" Stretch="Fill" Source="/Elements/M4A1.png"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Margin="0,0,0,20">
            <Ellipse.Fill>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Image x:Name="AnimatedImage2" Stretch="Fill" Source="/Elements/M4A1.png"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Ellipse.Fill>
        </Ellipse>

        <TextBlock x:Name="Name" TextWrapping="Wrap" Text="M4A1"  FontFamily="Segoe UI Semibold" Foreground="White" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="418" FontSize="11" />
    </Grid>
</UserControl>
