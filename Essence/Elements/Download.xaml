<UserControl x:Class="Essence.Elements.Download"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Essence.Elements"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d"
             Margin="0, 10, 0, 10" Width="310">


    <UserControl.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:2"/>
        </Storyboard>
    </UserControl.Resources>


    <UserControl.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}"/>
        </EventTrigger>
    </UserControl.Triggers>


    <Grid>
        <TextBlock x:Name="Title" Margin="50,4,10,0" Text=".NET 6.0 [60%]" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Foreground="#FFC8C8C8" TextAlignment="Center"/>

        <Grid x:Name="Downloading" Width="42" Height="42" HorizontalAlignment="Left" VerticalAlignment="Center" >
            <Ellipse Width="40.7" Height="40.7"
                                 Stroke="#FFC8C8C8" StrokeDashArray="17.5"
                                 StrokeDashCap="Round"
                                 StrokeThickness="3.7"
                                 VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
            </Ellipse>

            <Ellipse Width="40" Height="40"
                                 Stroke="#FFC8C8C8" StrokeDashArray="1.5, 1.72"
                                 StrokeDashOffset="1"
                                 StrokeDashCap="Round"
                                 StrokeThickness="3"
                                 VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform x:Name="rotateTransform" Angle="-606.97"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>

                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="rotateTransform"
                                             Storyboard.TargetProperty="Angle"
                                             From="0" To="360" Duration="0:0:3" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>

            <Path Stretch="Fill" Width="20" Height="20" Data="M1579 779q0 51-37 90l-75 75q-38 38-91 38q-54 0-90-38L992 651v704q0 52-37.5 84.5T864 1472H736q-53 0-90.5-32.5T608 1355V651L314 944q-36 38-90 38t-90-38l-75-75q-38-38-38-90q0-53 38-91L710 37q35-37 90-37q54 0 91 37l651 651q37 39 37 91" RenderTransformOrigin="0.5,0.5" Fill="#FFC8C8C8">
                <Path.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Path.RenderTransform>
            </Path>
        </Grid>

        <Image x:Name="completed" RenderOptions.BitmapScalingMode="HighQuality" Width="50" RenderTransformOrigin="0.5,0.5" Source="/Elements/completed.gif" gif:ImageBehavior.AnimatedSource="/Elements/completed.gif" Height="50" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-4,0,0,0" Visibility="Hidden"/>


        <Border Background="#FF505050" CornerRadius="3" Margin="50,40,10,0" Height="8" VerticalAlignment="Top"/>
        <Border x:Name="ProgressBar7" Background="#FFC12B2B" CornerRadius="3" Width="10" HorizontalAlignment="Left" Margin="50,40,0,0" Height="8" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
