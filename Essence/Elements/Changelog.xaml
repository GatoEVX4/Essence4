<Window x:Name="MainWin" x:Class="Essence.Elements.Changelog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Essence.Elements"
        mc:Ignorable="d"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="Changelog" Height="450" Width="400"
        Background="{x:Null}" Loaded="MainWin_Loaded">

    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Red" SecondaryColor="Teal" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="{x:Type Button}" TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}" />


            <Style x:Key="ScrollBarLineButton" TargetType="{x:Type RepeatButton}">
                <Setter Property="Visibility" Value="Hidden" />
                <Setter Property="SnapsToDevicePixels" Value="True" />
                <Setter Property="OverridesDefaultStyle" Value="True" />
                <Setter Property="Focusable" Value="False" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                            <Border x:Name="Border" Margin="0" BorderThickness="0" >
                                <Path HorizontalAlignment="Center" VerticalAlignment="Center" Data="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="White" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Foreground" Value="Gray" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="ScrollBarPageButton" TargetType="{x:Type RepeatButton}">
                <Setter Property="Visibility" Value="Hidden" />
                <Setter Property="SnapsToDevicePixels" Value="True" />
                <Setter Property="OverridesDefaultStyle" Value="True" />
                <Setter Property="IsTabStop" Value="False" />
                <Setter Property="Focusable" Value="False" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                            <Border Background="#FF000000" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
                <Setter Property="SnapsToDevicePixels" Value="True" />
                <Setter Property="OverridesDefaultStyle" Value="True" />
                <Setter Property="IsTabStop" Value="False" />
                <Setter Property="Focusable" Value="False" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Thumb}">
                            <Border CornerRadius="3" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" Width="8" Margin="8,0,-2,0" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="FocusVisual">
                <Setter Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Rectangle Margin="2" SnapsToDevicePixels="True" Stroke="{StaticResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <ControlTemplate x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="0" />
                        <RowDefinition Height="0.00001*" />
                        <RowDefinition MaxHeight="0" />
                    </Grid.RowDefinitions>
                    <Border Grid.RowSpan="3" Background="#00FFFFFF" />
                    <RepeatButton Grid.Row="0" Height="18" Command="ScrollBar.LineUpCommand" Content="M 0 4 L 8 4 L 4 0 Z" Style="{StaticResource ScrollBarLineButton}" Background="{x:Null}" />
                    <Track x:Name="PART_Track" Grid.Row="1" IsDirectionReversed="True">
                        <Track.DecreaseRepeatButton>
                            <RepeatButton Command="ScrollBar.PageUpCommand" Style="{StaticResource ScrollBarPageButton}" />
                        </Track.DecreaseRepeatButton>
                        <Track.Thumb>
                            <Thumb Margin="0.5,0,0.5,0" Background="#90B6B6B6" BorderBrush="#B6B6B6" Style="{StaticResource ScrollBarThumb}" />
                        </Track.Thumb>
                        <Track.IncreaseRepeatButton>
                            <RepeatButton Command="ScrollBar.PageDownCommand" Style="{StaticResource ScrollBarPageButton}" />
                        </Track.IncreaseRepeatButton>
                    </Track>
                    <RepeatButton Grid.Row="3" Height="18" Command="ScrollBar.LineDownCommand" Content="M 0 0 L 4 4 L 8 0 Z" Style="{StaticResource ScrollBarLineButton}" />
                </Grid>
            </ControlTemplate>
            <ControlTemplate x:Key="HorizontalScrollBar" TargetType="{x:Type ScrollBar}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MaxWidth="18" />
                        <ColumnDefinition Width="0.00001*" />
                        <ColumnDefinition MaxWidth="18" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.ColumnSpan="3" Background="#00FFFFFF" />
                    <RepeatButton Grid.Column="0" Width="18" Command="ScrollBar.LineLeftCommand" Content="M 4 0 L 4 8 L 0 4 Z" Style="{StaticResource ScrollBarLineButton}" />
                    <Track x:Name="PART_Track" Grid.Column="1" IsDirectionReversed="False">
                        <Track.DecreaseRepeatButton>
                            <RepeatButton Command="ScrollBar.PageLeftCommand" Style="{StaticResource ScrollBarPageButton}" />
                        </Track.DecreaseRepeatButton>
                        <Track.Thumb>
                            <Thumb Margin="0,1,0,1" Background="#B2B6B6B6" BorderBrush="#B2B6B6B6" Style="{StaticResource ScrollBarThumb}" />
                        </Track.Thumb>
                        <Track.IncreaseRepeatButton>
                            <RepeatButton Command="ScrollBar.PageRightCommand" Style="{StaticResource ScrollBarPageButton}" />
                        </Track.IncreaseRepeatButton>
                    </Track>
                    <RepeatButton Grid.Column="3" Width="18" Command="ScrollBar.LineRightCommand" Content="M 0 0 L 4 4 L 0 8 Z" Style="{StaticResource ScrollBarLineButton}" />
                </Grid>
            </ControlTemplate>
            <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
                <Setter Property="SnapsToDevicePixels" Value="True" />
                <Setter Property="OverridesDefaultStyle" Value="True" />
                <Style.Triggers>
                    <Trigger Property="Orientation" Value="Horizontal">
                        <Setter Property="Width" Value="Auto" />
                        <Setter Property="Height" Value="18" />
                        <Setter Property="Template" Value="{StaticResource HorizontalScrollBar}" />
                    </Trigger>
                    <Trigger Property="Orientation" Value="Vertical">
                        <Setter Property="Width" Value="18" />
                        <Setter Property="Height" Value="Auto" />
                        <Setter Property="Template" Value="{StaticResource VerticalScrollBar}" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Triggers>

        <EventTrigger RoutedEvent="FrameworkElement.Unloaded">
            <BeginStoryboard>
                <Storyboard x:Name="FormFadeOut" Completed="CloseWindow">
                    <DoubleAnimation x:Name="FormFadeOutAnimation" Storyboard.TargetName="MainWin" Storyboard.TargetProperty="(UIElement.Opacity)" From="1.0" To="0.0" Duration="0:0:0.5" AutoReverse="False" RepeatBehavior="1x" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

    </Window.Triggers>

    <Border x:Name="udunduwen" Background="Black" CornerRadius="4" Margin="200, 225, 200, 225">
        <Grid>
            <Border x:Name="Topbar" Height="40" BorderThickness="0, 0, 0, 0.0" CornerRadius="5, 5, 0, 0" VerticalAlignment="Top" MouseLeftButtonDown="Rectangle_MouseDown" Background="#4C000000" BorderBrush="#FF3C3C3C" Margin="20,10,10,0" >
                <Grid x:Name="TopBarGrid">
                    <Image x:Name="EvxIco" RenderOptions.BitmapScalingMode="HighQuality" Width="28" Height="28" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/essence.png" Margin="5,0,0,0"/>


                    <Image x:Name="CloseBtn" Height="18" VerticalAlignment="Center" Source="/ImageResources/MainExecution/CloseWindowIcon.png" OpacityMask="#FF454545" Opacity="0.9" Cursor="Hand" HorizontalAlignment="Right" Width="18" MouseLeftButtonDown="ExitMD" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.6" To="1" BeginTime="0:0:0" Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.6" BeginTime="0:0:0" Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <Image x:Name="MinimizeBtn" Height="22" OpacityMask="#FF454545" Opacity="0.9" VerticalAlignment="Center" Cursor="Hand" HorizontalAlignment="Right" Width="22" MouseLeftButtonDown="Mini" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,-1,40,0" Source="/ImageResources/minimize.png">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.6" To="1" BeginTime="0:0:0" Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.6" BeginTime="0:0:0" Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <TextBlock x:Name="EVXTXT" Text="What's New" VerticalAlignment="Top" Foreground="Gainsboro" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="14" Margin="40,4,0,0" HorizontalAlignment="Left" Width="126" FontWeight="Bold" />
                    <TextBlock x:Name="data_atual" Text="21 December 2024" VerticalAlignment="Bottom" Foreground="#FF6E6E6E" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="10" Margin="40,0,0,4" HorizontalAlignment="Left" Width="126" />

                </Grid>
            </Border>



            <ScrollViewer  Grid.IsSharedSizeScope="True" Margin="3,60,3,40" Padding="-10">
                <WrapPanel Height="Auto" Width="Auto" Grid.IsSharedSizeScope="True" Orientation="Vertical" Margin="27,10,0,17">
                    
                    <Grid>
                        <Border  Background="#4CC81414" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center" Width="358" Height="120">
                            <Border.Effect>
                                <DropShadowEffect Color="Red" Direction="0" ShadowDepth="0" BlurRadius="25"/>
                            </Border.Effect>
                            <Border.Clip>
                                <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,358,120"/>
                            </Border.Clip>
                            <Image Width="358" Height="120" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased" Source="/360_F_781917483_oha61SjI5XcSOasPNHPg9zvawMNLI0pj-removebg-preview.png"/>
                        </Border>
                    </Grid>

                    <TextBlock x:Name="ChangelogTXT" TextWrapping="Wrap" Text="Essence Features Changelog" VerticalAlignment="Top" Foreground="#FFC8C8C8" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="18"  HorizontalAlignment="Left" Margin="0,20,0,0" />

                    <Grid Margin="0,15,0,0" HorizontalAlignment="Left" Width="355">
                        <Ellipse Fill="#FF464646" Width="5" Height="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,9,0,0" />

                        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF969696" FontFamily="/Essence;component/Fonts/#Poppins Medium" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <Run Text="Essence is out! enjoy the New Year Event!       " FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="14" />
                            <Run Text="Upload your sung to everyone listen! and have a chance to win a key! Isn't that amazing?" FontFamily="/Essence;component/Fonts/#Poppins Light" FontSize="12" />
                        </TextBlock>
                    </Grid>

                    <Grid Margin="0,10,0,0" HorizontalAlignment="Left" Width="355" >
                        <Ellipse Fill="#FF464646" Width="5" Height="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,9,0,0" />

                        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF969696" FontFamily="/Essence;component/Fonts/#Poppins Medium" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <Run Text="We've reduced CPU usage by 30% in old devices." FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="14" />
                            <Run Text="Enjoy a smoother experience with us this Christmas!" FontFamily="/Essence;component/Fonts/#Poppins Light" FontSize="12" />
                        </TextBlock>
                    </Grid>

                    <Grid Margin="0,10,0,0" HorizontalAlignment="Left" Width="355" >
                        <Ellipse Fill="#FF464646" Width="5" Height="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,9,0,0" />

                        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF969696" FontFamily="/Essence;component/Fonts/#Poppins Medium" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <Run Text="Why are you still here reading?" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="14" />
                            <Run Text="Start using the update right now!" FontFamily="/Essence;component/Fonts/#Poppins Light" FontSize="12" />
                        </TextBlock>
                    </Grid>
                </WrapPanel>
            </ScrollViewer>

            <Border Height="40" VerticalAlignment="Bottom" Background="#FF0A0A0A" CornerRadius="0, 0, 4, 4">
                <Grid>
                    <local:SocialMedia HorizontalAlignment="Left" Margin="10,0,0,0"/>
                    
                    <Button x:Name="finishbtn" Padding="0" BorderThickness="0" materialDesign:ButtonAssist.CornerRadius="4" Click="finishbtn_Click" Content="Nice!"  Style="{StaticResource MaterialDesignFlatDarkBgButton}" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Height="30" Foreground="#FFE6E6E6" Margin="0,0,5,0">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                <GradientStop Color="#FFC81414"/>
                                <GradientStop Color="#FF641414" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                </Grid>
            </Border>
        </Grid>
    </Border>

</Window>
