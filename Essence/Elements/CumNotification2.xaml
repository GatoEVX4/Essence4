<UserControl x:Class="Essence.Elements.CumNotification2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Essence.Elements"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Red" SecondaryColor="Teal" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="{x:Type CheckBox}" TargetType="{x:Type CheckBox}" BasedOn="{StaticResource MaterialDesignCheckBox}" />
            <Style x:Key="{x:Type Button}" TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}" />
            <Style x:Key="{x:Type TextBox}" TargetType="{x:Type TextBox}" BasedOn="{StaticResource MaterialDesignTextBox}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid x:Name="BlackMamba" Background="#CC000000" Margin="-10"/>

        <Border x:Name="CumNotification" Padding="10" BorderThickness="2" CornerRadius="5" Width="350" BorderBrush="#CCFF0000" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,10,10,10">
            <Border.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF060709" Offset="0"/>
                    <GradientStop Color="#FF141414" Offset="0.736"/>
                    <GradientStop Color="#FE060709" Offset="0.42"/>
                    <GradientStop Color="#FE060709" Offset="0.83"/>
                    <GradientStop Color="#FE060709" Offset="0.705"/>
                    <GradientStop Color="#FE0F0F0F" Offset="0.594"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="Red" Direction="0" BlurRadius="30" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Image x:Name="Image" Source="/ImageResources/app.ico" Width="60" Height="60" HorizontalAlignment="Left" Visibility="Hidden" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased"/>

                <TextBlock x:Name="titulo" Text="Notification" FontSize="20" FontWeight="Bold" TextWrapping="Wrap" Foreground="White" VerticalAlignment="Top" />
                <TextBlock x:Name="textox" Text="skibid toilet exist, i can proof skibid toilet exist, i can proof skibid toilet exist, i can proof skibid toilet exist, i can proof skibid toilet exist, i can proof skibid toilet exist, i can proof skibid toilet exist, i can proof skibid toilet exist, i can proof skibid toilet exist, i can proof skibid toilet exist, i can proof skibid toilet exist, i can proof skibid toilet exist, i can proof skibid toilet exist, i can proof " TextWrapping="Wrap" Foreground="#FFC8C8C8" FontSize="15" Margin="0,36,0,35" VerticalAlignment="Top" />

                <WrapPanel VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <Button x:Name="CancelNotf" BorderThickness="0" materialDesign:ButtonAssist.CornerRadius="8" Click="CloseNotf_Click" Style="{StaticResource MaterialDesignFlatDarkBgButton}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="28" Foreground="#FFE6E6E6" Background="#FF3C3C3C" Margin="0,0,10,0" Width="158">
                        <TextBlock Text="Cancel" FontFamily="/Essence;component/Fonts/#Poppins" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="15,0,15,0"/>
                    </Button>

                    <Button x:Name="OKNotif" BorderThickness="0" materialDesign:ButtonAssist.CornerRadius="8" Click="OKNotif_Click" Style="{StaticResource MaterialDesignFlatDarkBgButton}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="28" Foreground="#FFE6E6E6" Background="#FFC81414" Width="158">
                        <TextBlock Text="Yes" FontFamily="/Essence;component/Fonts/#Poppins" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="15,0,15,0"/>
                    </Button>
                </WrapPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
