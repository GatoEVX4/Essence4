<Window
    x:Class="Essence.Windows.StopWarning"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:Essence"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="MainWin"
    Title="CriticalWarnings"
    Width="400"
    Height="250"
    AllowsTransparency="True"
    Background="{x:Null}"
    Closing="MainWin_Closing"
    Foreground="#FF939292"
    Icon="/Graphics/Images/essence.ico"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Triggers>

        <EventTrigger RoutedEvent="FrameworkElement.Unloaded">
            <BeginStoryboard>
                <Storyboard x:Name="FormFadeOut" Completed="CloseWindow">
                    <DoubleAnimation
                        x:Name="FormFadeOutAnimation"
                        AutoReverse="False"
                        RepeatBehavior="1x"
                        Storyboard.TargetName="MainWin"
                        Storyboard.TargetProperty="(UIElement.Opacity)"
                        From="1.0"
                        To="0.0"
                        Duration="0:0:0.5" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

    </Window.Triggers>

    <Border x:Name="Warnings" Background="#FF0F0F0F">
        <Grid>
            <Border
                x:Name="Topbar"
                Height="40"
                VerticalAlignment="Top"
                Background="#4C000000"
                BorderThickness="0"
                CornerRadius="5, 5, 0, 0"
                MouseLeftButtonDown="Rectangle_MouseDown">
                <Grid x:Name="TopBarGrid">
                    <Image
                        Width="28"
                        Height="28"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="/Graphics/Images/essence.png" />


                    <Image
                        x:Name="CloseBtn"
                        Width="18"
                        Height="18"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        MouseLeftButtonDown="ExitMD"
                        Opacity="0.9"
                        OpacityMask="#FF454545"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="/Graphics/Images/MainExecution/CloseWindowIcon.png">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    BeginTime="0:0:0"
                                                    Storyboard.TargetProperty="Opacity"
                                                    From="0.6"
                                                    To="1"
                                                    Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    BeginTime="0:0:0"
                                                    Storyboard.TargetProperty="Opacity"
                                                    From="1"
                                                    To="0.6"
                                                    Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <TextBlock
                        x:Name="EVXTXT"
                        Width="126"
                        Margin="40,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontFamily="/Essence;component/Fonts/#Poppins Medium"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="Gainsboro"
                        Text="Essence"
                        TextWrapping="Wrap" />
                </Grid>
            </Border>

            <Grid
                x:Name="Conexão_Alterada"
                Margin="0,40,0,0"
                Background="Black">
                <TextBlock />
                <Image
                    Width="120"
                    Height="120"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="/Graphics/Images/Exceptions/stop.png" />
                <TextBlock
                    x:Name="UnautorizedAction"
                    Margin="10,10,10,0"
                    VerticalAlignment="Top"
                    Cursor=""
                    FontFamily="/Essence;component/Fonts/#Poppins Medium"
                    FontSize="15"
                    Foreground="White"
                    Text="Unauthorized action detected. Stop immediately to avoid further measures."
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="FollowRules"
                    Margin="0,0,0,25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontFamily="/Essence;component/Fonts/#Poppins Medium"
                    FontSize="14"
                    Foreground="#FFC8C8C8"
                    Text="Follow the rules to continue using our services."
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="reason"
                    Margin="0,190,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="/Essence;component/Fonts/#Poppins Medium"
                    FontSize="10"
                    Foreground="#FFC8C8C8"
                    Text="..."
                    TextWrapping="Wrap" />
            </Grid>
            <Grid
                x:Name="Servidor_Off"
                Margin="0,40,0,0"
                d:IsHidden="True"
                Background="Black">
                <TextBlock />
                <Image
                    Width="120"
                    Height="120"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="/Graphics/Images/Exceptions/badserver.png" />
                <TextBlock
                    x:Name="UpdatingServers"
                    Margin="10,10,10,0"
                    VerticalAlignment="Top"
                    FontFamily="/Essence;component/Fonts/#Poppins Medium"
                    FontSize="15"
                    Foreground="White"
                    Text="We’re working to resolve the problem as quickly as possible. Thank you for your patience!"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="ServersUpdating"
                    Margin="0,0,0,25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontFamily="/Essence;component/Fonts/#Poppins Medium"
                    FontSize="14"
                    Foreground="#FFC8C8C8"
                    Text="Our servers are updating!"
                    TextWrapping="Wrap" />
            </Grid>
            <Grid
                x:Name="Net_Off"
                Margin="0,40,0,0"
                d:IsHidden="True"
                Background="Black">
                <TextBlock />
                <Image
                    Width="100"
                    Height="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="/Graphics/Images/Exceptions/shield.png" />
                <TextBlock
                    x:Name="CheckInternet"
                    Margin="10,10,10,0"
                    VerticalAlignment="Top"
                    FontFamily="/Essence;component/Fonts/#Poppins Medium"
                    FontSize="15"
                    Foreground="White"
                    Text="Please check your network settings and firewall configuration to restore access."
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="NoInternet"
                    Margin="0,0,0,25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontFamily="/Essence;component/Fonts/#Poppins Medium"
                    FontSize="14"
                    Foreground="#FFC8C8C8"
                    Text="No Internet Connection Detected"
                    TextWrapping="Wrap" />
            </Grid>
            <Grid
                x:Name="Serv_429"
                Margin="0,40,0,0"
                d:IsHidden="True"
                Background="Black">
                <TextBlock />
                <Image
                    Width="100"
                    Height="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="/Graphics/Images/Exceptions/clock.png" />
                <TextBlock
                    x:Name="CheckInternet1"
                    Margin="10,10,10,0"
                    VerticalAlignment="Top"
                    FontFamily="/Essence;component/Fonts/#Poppins Medium"
                    FontSize="15"
                    Foreground="White"
                    Text="Ermm, you're making a lot of requests, let's calm down a bit"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="NoInternet1"
                    Margin="0,0,0,25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontFamily="/Essence;component/Fonts/#Poppins Medium"
                    FontSize="14"
                    Foreground="#FFC8C8C8"
                    Text="request limit reached"
                    TextWrapping="Wrap" />
            </Grid>
            <Image
                x:Name="loading_gif1"
                Width="20"
                Height="20"
                Margin="0,0,0,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                gif:ImageBehavior.AnimatedSource="/Graphics/Images/Settings/Rolling-1s-100px.gif"
                Opacity="0.8"
                RenderOptions.BitmapScalingMode="HighQuality"
                RenderOptions.EdgeMode="Aliased"
                Visibility="Collapsed" />
        </Grid>
    </Border>

</Window>
