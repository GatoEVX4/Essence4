<Window x:Class="EssenceUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EssenceUpdater2"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Icon="essence.png"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="117" Width="400" Background="{x:Null}" Loaded="Window_Loaded">
    <Grid>
        <Grid x:Name="Stuff">
            <Border Background="Black"/>
            <Image x:Name="logo" RenderOptions.BitmapScalingMode="HighQuality" Width="70" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/essence.png" Margin="0,0,0,20"/>


            <Label x:Name="TXTPR" Foreground="#FFC8C8C8" Content="M4A1 is the goat" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="25,0,0,20" Background="{x:Null}"/>
            <Border x:Name="progressbar0" Background="#FF141414" Height="3" Margin="30,0,30,20" VerticalAlignment="Bottom"/>
            <Border x:Name="progressbar" Background="#FFFD6B88" Height="3" Margin="30,0,370,20" VerticalAlignment="Bottom"/>
        </Grid>
        
        <Grid x:Name="Servidor_Off" Background="Black" d:IsHidden="True">
            <Image Source="/badserver.png" Width="65" Height="65" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,20,0,0"/>
            <TextBlock x:Name="UpdatingServers" TextWrapping="Wrap" Text="We’re working to resolve the problem as quickly as possible. Thank you for your patience!" VerticalAlignment="Top" Foreground="White" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="15" Margin="10,10,10,0" TextAlignment="Center"/>
            <TextBlock x:Name="ServersUpdating" TextWrapping="Wrap" Text="Our servers are updating!" VerticalAlignment="Bottom" Foreground="#FFC8C8C8" FontFamily="/Essence;component/Fonts/#Poppins Medium" FontSize="14" Margin="0,0,0,5" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
