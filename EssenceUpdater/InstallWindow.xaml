<Window
    x:Class="EssenceUpdater.InstallWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EssenceUpdater"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MainWin"
    Title="EssenceUpdater"
    Width="640"
    Height="400"
    AllowsTransparency="True"
    Background="#FF050505"
    BorderBrush="#FF454545"
    BorderThickness="1"
    Icon="/Graphics/essence.ico"
    Loaded="Window_Loaded"
    MouseDown="Window_MouseDown"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme
                    BaseTheme="Dark"
                    PrimaryColor="Red"
                    SecondaryColor="Teal" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style
                x:Key="{x:Type CheckBox}"
                BasedOn="{StaticResource MaterialDesignCheckBox}"
                TargetType="{x:Type CheckBox}" />
            <Style
                x:Key="{x:Type Button}"
                BasedOn="{StaticResource MaterialDesignRaisedButton}"
                TargetType="{x:Type Button}" />

            <Storyboard x:Key="GradientAnimation" RepeatBehavior="Forever">
                <DoubleAnimation
                    Storyboard.TargetName="Stop0"
                    Storyboard.TargetProperty="Offset"
                    From="-0.6"
                    To="1"
                    Duration="0:0:1.7" />
                <DoubleAnimation
                    Storyboard.TargetName="Stop1"
                    Storyboard.TargetProperty="Offset"
                    From="-0.3"
                    To="1.3"
                    Duration="0:0:1.7" />
                <DoubleAnimation
                    Storyboard.TargetName="Stop2"
                    Storyboard.TargetProperty="Offset"
                    From="0"
                    To="1.6"
                    Duration="0:0:1.7" />
            </Storyboard>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Triggers>

        <EventTrigger RoutedEvent="FrameworkElement.Unloaded">
            <BeginStoryboard>
                <Storyboard x:Name="FormFadeOut" Completed="CloseWindow">
                    <DoubleAnimation
                        x:Name="FormFadeOutAnimation"
                        AutoReverse="False"
                        RepeatBehavior="1x"
                        Storyboard.TargetName="MainWin"
                        Storyboard.TargetProperty="(UIElement.Opacity)"
                        From="1.0"
                        To="0.0"
                        Duration="0:0:0.3" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

    </Window.Triggers>

    <Grid x:Name="maingrid" ClipToBounds="True">
        <Image
            x:Name="bk"
            RenderOptions.BitmapScalingMode="HighQuality"
            Source="/Graphics/generated_image.png"
            Stretch="UniformToFill"
            StretchDirection="UpOnly"
            Visibility="Collapsed" />

        <Border
            Height="100"
            Margin="0,0,0,-50"
            VerticalAlignment="Bottom"
            CornerRadius="5"
            Opacity="0.6">
            <Border.Effect>
                <BlurEffect Radius="100" />
            </Border.Effect>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterX="0.5" CenterY="0.5" />
                            <SkewTransform CenterX="0.5" CenterY="0.5" />
                            <RotateTransform x:Name="rotate" CenterX="0.5" CenterY="0.5" />
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop x:Name="Color1" Offset="0" Color="#FFED8A8A" />
                    <GradientStop x:Name="Color2" Offset="1" Color="#FF88557A" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <WrapPanel
            x:Name="things"
            Margin="50,0,0,85"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Grid
                x:Name="fasdfadfdf"
                Height="42"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <TextBlock
                    x:Name="fdfijf"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="/EssenceUpdater;component/Graphics/Fonts/#Atkinson Hyperlegible"
                    FontSize="32"
                    FontWeight="Bold"
                    Text="Essence Windows">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FFFF8B8A" />
                            <GradientStop Offset="1" Color="#FF895078" />
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
                <Border Height="5" VerticalAlignment="Bottom">
                    <Border.Effect>
                        <BlurEffect Radius="2" />
                    </Border.Effect>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop x:Name="Stop0" Offset="-0.6" Color="#33895078" />
                            <GradientStop x:Name="Stop1" Offset="-0.3" Color="#FFFF8B8A" />
                            <GradientStop x:Name="Stop2" Offset="0" Color="#33895078" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

            </Grid>

            <Grid
                x:Name="lol"
                Margin="0,10,0,0"
                d:IsHidden="True"
                ClipToBounds="True">
                <WrapPanel Width="350" HorizontalAlignment="Left">
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontFamily="/EssenceUpdater;component/Graphics/Fonts/#Atkinson Hyperlegible"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#FFEAE6F5"
                        Text="Your "
                        TextWrapping="Wrap" />
                    <Grid>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontFamily="/EssenceUpdater;component/Graphics/Fonts/#Atkinson Hyperlegible"
                            FontSize="28"
                            FontWeight="Bold"
                            Text="NEW"
                            TextWrapping="Wrap">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FFFF8B8A" />
                                    <GradientStop Offset="1" Color="#FF895078" />
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <Border Height="3" VerticalAlignment="Bottom">
                            <Border.Effect>
                                <BlurEffect Radius="2" />
                            </Border.Effect>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FFFF8B8A" />
                                    <GradientStop Offset="1" Color="#19895078" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontFamily="/EssenceUpdater;component/Graphics/Fonts/#Atkinson Hyperlegible"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#FFEAE6F5"
                        Text="Number 1 Executor"
                        TextWrapping="Wrap" />
                </WrapPanel>
            </Grid>


