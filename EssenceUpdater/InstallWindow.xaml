                FontSize="20"
                FontWeight="Bold"
                Foreground="#FFEAE6F5"
                Opacity="0"
                Text="Click to know more"
                TextWrapping="Wrap" />
            <Button
                x:Name="ADB"
                Width="538"
                Height="120"
                Margin="0,0,0,20"
                materialDesign:ButtonAssist.CornerRadius="5"
