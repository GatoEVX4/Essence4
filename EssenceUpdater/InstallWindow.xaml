                        Duration="0:0:0.3" />
                    <DoubleAnimation
                        Storyboard.TargetName="whoa"
                        Storyboard.TargetProperty="Opacity"
                        To="1"
                        Duration="0:0:0.3" />
                </Storyboard>
                <Storyboard x:Key="BlurOut">
                    <DoubleAnimation
                        Storyboard.TargetName="ADimage"
                        Storyboard.TargetProperty="(Effect).Radius"
                        To="0"
                        Duration="0:0:0.3" />
                    <DoubleAnimation
                        Storyboard.TargetName="whoa"
                        Storyboard.TargetProperty="Opacity"
                        To="0"
                        Duration="0:0:0.3" />
                </Storyboard>
            </Grid.Resources>

            <Grid.Triggers>
                <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="ADB">
                    <BeginStoryboard Storyboard="{StaticResource BlurIn}" />
                </EventTrigger>

                <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="ADB">
