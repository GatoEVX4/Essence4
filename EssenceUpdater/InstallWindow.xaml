                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                d:IsHidden="True"
                Foreground="#FFC8C8C8"
                Text="By clicking &quot;Accept &amp; Go&quot;, you agree to the EULA. Learn more about how we treat your data in our privacy statement"
                TextWrapping="Wrap" />
            <CheckBox
                x:Name="CollectGameData"
                Margin="0,5,0,0"
