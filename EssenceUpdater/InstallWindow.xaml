                Style="{StaticResource MaterialDesignFlatDarkBgButton}" />
            <TextBlock
                x:Name="instprocess_Copiar"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Foreground="#FF969696">
                <Run Text="Advertisement - " />
                <Run
                    Cursor="Hand"
                    PreviewMouseDown="Run_PreviewMouseDown"
                    Text="Want to add your product here? DM us!"
                    TextDecorations="Underline" />
            </TextBlock>
        </Grid>
        <Button
