<Window
    x:Class="EssenceUpdater.UpdateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EssenceUpdater"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="UpdateWindow"
    Width="400"
    Height="117"
    AllowsTransparency="True"
    Background="{x:Null}"
    Icon="/Graphics/essence.ico"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="Stuff">
            <Border Background="Black" />
            <Image
                x:Name="logo"
                Width="50"
                Height="50"
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="/Graphics/essence.png" />


            <Label
                x:Name="TXTPR"
                Margin="25,0,0,20"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="{x:Null}"
                Content="M4A1 is the goat"
                Foreground="#FFC8C8C8" />
            <Border
                x:Name="progressbar0"
                Height="1"
                Margin="30,0,30,20"
                VerticalAlignment="Bottom"
                Background="#FF141414" />
            <Border
                x:Name="progressbar"
                Height="1"
                Margin="30,0,370,20"
                VerticalAlignment="Bottom"
                Background="#FFFD6B88" />
        </Grid>

        <Grid
            x:Name="Servidor_Off"
            d:IsHidden="True"
            Background="Black">
            <Image
                Width="65"
                Height="65"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="/badserver.png" />
            <TextBlock
                x:Name="UpdatingServers"
                Margin="10,10,10,0"
                VerticalAlignment="Top"
                FontFamily="/Essence;component/Fonts/#Poppins Medium"
                FontSize="15"
                Foreground="White"
                Text="We’re working to resolve the problem as quickly as possible. Thank you for your patience!"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="ServersUpdating"
                Margin="0,0,0,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontFamily="/Essence;component/Fonts/#Poppins Medium"
                FontSize="14"
                Foreground="#FFC8C8C8"
                Text="Our servers are updating!"
                TextWrapping="Wrap" />
        </Grid>
    </Grid>
</Window>
